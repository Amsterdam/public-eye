{
    "train_dataset_id": {
        "required": true,
        "type": "int"
    },
    "val_dataset_id": {
        "required": true,
        "type": "int"
    },
    "model_name": {
        "required": true,
        "type": "string"
    },
    "batch_size": {
        "required": false,
        "type": "int",
        "default": 1
    },
    "workers": {
        "required": false,
        "type": "int",
        "default": 1
    },
    "lr": {
        "required": false,
        "type": "float",
